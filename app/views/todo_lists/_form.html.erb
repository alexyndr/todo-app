<div class="index_row clearfix" style="padding: 0 2em" >
	<%= form_with model: ([@user, @todo_list]), remote: true do |form| %>
	  <div class="field">	
	    <%= form.text_area :title, class: "h-25", placeholder: "Start typing here to create a project...", required: true %>
	  </div>
	  <div class="actions">
	    <%= form.submit %>
	  </div>
	<% end %>
</div>