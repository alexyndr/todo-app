<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @todo_list.description %>
</p>

<div id="todo_items_wrapper">
	<%= render @todo_list.todo_items %>
	<div id="form">
		<%= render "todo_items/form" %>
	</div>
</div>
<div class="links">
	<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> 
	---
	<%= link_to 'Back', user_todo_lists_path(@user) %>
	---
	<%= link_to 'Delete List', user_todo_list_path(current_user, @todo_list), method: :delete %>
</div>


