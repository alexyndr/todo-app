<%#= link_to "Mark as Complete", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>

<div class="row clearfix">
	<% if todo_item.completed? %>
		<div class="complete">
			<%= link_to "Mark as Complete", complete_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p><strike style="opacity: 0.4;"><%= todo_item.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :delete, data: { confirm: "Are you realy sure?"} %>
			<%= link_to "Edit", edit_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id) %>
			<%= link_to "Up", move_up_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :put %>
			<%= link_to "Down", move_down_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :put %>
			<%= link_to "Deadline"  %>
		</div>
	<% else %>
		<div class="complete">
			<%= link_to "Mark as Complete", complete_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p><%= todo_item.content %></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :delete, data: { confirm: "Are you realy sure?"} %>
			<%= link_to "Edit", edit_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id) %>
			<%= link_to "Up", move_up_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :put %>
			<%= link_to "Down", move_down_user_todo_list_todo_item_path(@user, todo_item[:todo_list_id], todo_item.id), method: :put %>
			<%= link_to "Deadline"  %>
		</div>
	<% end %>
</div>